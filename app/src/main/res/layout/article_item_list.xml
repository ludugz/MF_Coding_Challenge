<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/ripple_effect">

    <ImageView
        android:id="@+id/image_view_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:transitionName="transitionImage" />

    <TextView
        android:id="@+id/text_view_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_view_item"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image_view_item"
        android:textSize="10dp"
        android:textStyle="bold"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/text_view_description_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_item"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image_view_item"
        android:textSize="7dp"
        tools:text="@string/app_name" />
</RelativeLayout>